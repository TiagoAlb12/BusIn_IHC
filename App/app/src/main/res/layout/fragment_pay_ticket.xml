<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payTicket.PayTicketFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Ticket"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total:"
        android:textSize="35dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="112dp"
        android:layout_marginLeft="-60dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.20€"
        android:textSize="50dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Wallet"
        android:textSize="35dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="190dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_wallet_foreground"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="60dp"/>

    <TextView
        android:id="@+id/value_wallet_in_pay_ticket_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.20€"
        android:textSize="40dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="268dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/pay_button"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:text="Pay with wallet money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:backgroundTint="@color/my_primary"
        android:layout_gravity="center|top"/>

</FrameLayout>