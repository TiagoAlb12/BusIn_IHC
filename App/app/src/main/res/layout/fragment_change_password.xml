<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changepassword.ChangePasswordFragment">

    <TextView
        android:id="@+id/login_text_in_change_password_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="40sp"
        android:layout_gravity="center|top"
        android:layout_marginTop="40dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/login_text_in_login_page"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Insert your account email to recover your password."
        android:textSize="16sp"
        android:layout_gravity="center|top"
        android:layout_marginTop="180dp"
        android:textColor="@color/gray_for_ticket"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/email_in_login_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="250dp"/>

    <EditText
        android:id="@+id/email_box_in_login_page"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:hint="example@gmail.com"
        android:textSize="16sp"
        android:background="@drawable/textbox_border"
        android:layout_marginTop="275dp"
        android:paddingStart="12dp"
        android:layout_marginLeft="48dp"/>

    <Button
        android:id="@+id/login_button_in_login_page"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:backgroundTint="@color/my_primary"
        android:text="Send Email"
        android:layout_marginTop="20dp"/>

</FrameLayout>